<!DOCTYPE html>
<html lang="en">

<head>
 {{>headerlinks}}
 <title>Weather Update</title>

</head>
<body>
  {{>navbar}}

  
  <div class="main_header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">

          <div class="container-fluid main_content">
            <form class="temp_form">
              <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="false">
              <br>
              <input type="submit" id="submitBtn" value="Search">
            </form>

          <div class="tempInformation">
            <div class="top_layer">
              <p id="day">Tuesday</p>
              <p id="today_data">13 OCT</p>
            </div>
            <div class="main_layer">
              <p id="city_name">Get Output Here</p>
              <div class="middle_layer daa_hide">
                <p id="temp"><span>0</span><sup>o</sup>C</p>
                <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
              </div>
            </div>
          </div>
          </div>
      </div>
    </div>
  </div>

  {{>footer}}
  <script src="js/main.js"></script>
  
</body>
</html>